                            <button class="btn-primary" style="margin-top: 15px;">Manage Discounts</button>
                        </div>
                        <div style="background: #f8f9fa; padding: 20px; border-radius: 12px;">
                            <h3>Review Management</h3>
                            <button class="btn-primary" style="margin-top: 15px;">Moderate Reviews</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Login Modal -->
    <div id="loginModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Login to ShopHub</div>
                <button class="close" onclick="closeLogin()">&times;</button>
